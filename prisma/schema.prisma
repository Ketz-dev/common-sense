generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model GuildLoggingSettings {
  id String @id @map("_id") @db.String

  activityLogs String? @unique
  moderationLogs String? @unique

  activityIgnored String[]
  moderationIgnored String[]
}

model GuildCommandSettings {
  id String @id @map("_id") @db.String

  commandsSpam String? @unique

  disabledCommands String[]
}